{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<div class="form-signin mx-auto h-100">
    <form method="POST" autocomplete="off" class="d-flex flex-column gap-2"> <!-- flex-md-row -->
        <input role="presentation" autocomplete="false" name="hidden" type="text" style="display:none;">
        {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="{{ route('home') }}"> #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <img class="mb-4" src="{{ asset('/images/vide.png') }}" alt="" width="72" height="57">
        <div class="w-100">
            <h1 class="h3 mb-3 fw-normal">
                {{ 'Veuillez vous connecter'|trans }}
            </h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="loginform-username" placeholder="{{ 'Pseudo'|trans }}" name="_username" value="{{ last_username }}" {% if last_username is empty %} autofocus="true" {% endif %} aria-required="true" aria-invalid="true" autocomplete="false">
                <label for="loginform-username">
                    {{ 'Pseudo'|trans }}
                </label>
                <div class="invalid-feedback"></div>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="loginform-password" placeholder="{{ 'Mot de passe'|trans }}" name="_password" {% if last_username is not empty %} autofocus="true" {% endif %} aria-required="true" aria-invalid="true" autocomplete="false">
                <label for="loginform-password">
                    {{ 'Mot de passe'|trans }}
                </label>
                <div class="invalid-feedback"></div>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    {{ 'Souviens-toi de moi'|trans }}
                </label>
            </div>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <button class="btn btn-primary w-100 py-2" type="submit">
                <i class="fa-solid fa-sign-in-alt"></i>
                {{ 'Se connecter'|trans }}
            </button>
            <p class="mt-5 mb-3 text-body-secondary">{{ app_parameter('app.name') }} &copy; {{ 'now'|date('Y') }}</p>
        </div>
    </form>
</div>
{% endblock %}
