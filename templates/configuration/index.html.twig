{% extends 'base.html.twig' %}

{% block title %}Configuration index{% endblock %}

{% block body %}
    <h1>Configuration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>GameName</th>
                <th>Presentation</th>
                <th>MaxLevel</th>
                <th>Experience</th>
                <th>SkillPoint</th>
                <th>ExperienceBonus</th>
                <th>GoldBonus</th>
                <th>DropBonus</th>
                <th>Access</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for configuration in configurations %}
            <tr>
                <td>{{ configuration.id }}</td>
                <td>{{ configuration.gameName }}</td>
                <td>{{ configuration.presentation }}</td>
                <td>{{ configuration.maxLevel }}</td>
                <td>{{ configuration.experience }}</td>
                <td>{{ configuration.skillPoint }}</td>
                <td>{{ configuration.experienceBonus }}</td>
                <td>{{ configuration.goldBonus }}</td>
                <td>{{ configuration.dropBonus }}</td>
                <td>{{ configuration.access }}</td>
                <td>
                    <a href="{{ path('app_configuration_show', {'id': configuration.id}) }}">show</a>
                    <a href="{{ path('app_configuration_edit', {'id': configuration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_configuration_new') }}">Create new</a>
{% endblock %}
